generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  analyses  Analysis[]
}

model Analysis {
  id          String   @id @default(cuid())
  userId      String
  createdAt   DateTime @default(now())
  inputHash   String   @unique
  resultJson  String   // JSON.stringify(AnalysisResult)
  shareSlug   String   @unique @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
}
